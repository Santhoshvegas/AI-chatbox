from tkinter import *
from chat import get_response, bot_name

BG_GRAY = "#ABB289"
BG_COLOR = "#17202A"
TEXT_COLOR = "#EAECEE"

FRONT = "Helvetica 16"
FRONT_BOLD = "Helvetica 13 bold"

class Chatapplication:

    def _init_(self):
        self.window = Tk()
        self._setup_main_window()

    def run(self):
        self.window.mainloop()

    def _setup_main_window(self):
        self.window.tittle("WELCOME TO MRK IT")
        self.window.resizable(width=False, height=False)
        self.window.configure(width=870, height=1100, bg=BG_COLOR)

if __name__ == "__main__":
    app = Chatapplication()
    app.run()

